{{#paper-sidenav class="md-sidenav-left md-whiteframe-z2" locked-open="gt-sm"}}
  {{#paper-toolbar}}
    <div class="md-toolbar-tools">
      <div class="logo">
        <strong>Task Lists</strong>
      </div>
    </div>
  {{/paper-toolbar}}

  {{#paper-content}}
    {{#paper-list}}
      {{#each model as |list|}}
        {{#paper-item onClick=(route-action "transitionToList" list.id)}}
            {{list.title}}
        {{/paper-item}}
      {{/each}}
    {{/paper-list}}
  {{/paper-content}}

{{/paper-sidenav}}

<div layout="column" tabindex="-1" role="main" class="flex layout-column">
  {{#paper-toolbar}}
    {{#if gapi.isSignedIn}}
      {{#paper-toolbar-tools}}
        <h2>{{currentListTitle}}</h2>
        <span class="flex"></span>
        <img class="toolbar-avatar" src="{{gapi.currentUser.avatar}}">
        {{#paper-button noink=true onClick=(route-action "signOut")}}
          Sign Out {{paper-icon "exit-to-app" title="Sign Out"}}
        {{/paper-button}}

      {{/paper-toolbar-tools}}
    {{/if}}
  {{/paper-toolbar}}

  {{#paper-content class="md-padding"}}
    {{outlet}}
  {{/paper-content}}
</div>